@model Plataforma_CPF.Models.Alumnos
@{
    ViewBag.Title = "Configuración";
    //Layout = null;
    Layout = "~/Views/Alumnos/_LayoutMA.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CONFIGURACIÒN DE DATOS</title>
    <link rel="shortcut icon" type="/image/x-icon" href="~/Content/Pal/images/logocpf.svg" alt="" />
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Bootstrap Core CSS -->
    <link href="~/Content/startmin/css/bootstrap.min.css" rel="stylesheet">

    <!-- MetisMenu CSS -->
    <link href="~/Content/startmin/css/metisMenu.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="~/Content/startmin/css/startmin.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="~/Content/startmin/css/font-awesome.min.css" rel="stylesheet" type="text/css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <div id="wrapper">
        <div id="page-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">CONFIGURACIÓN DATOS DE LA CUENTA DEL USUARIO</h1>
                    </div>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.idUsuario)
                    <!-- /.col-lg-12 -->
                </div>
                <!-- /.row -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                CAMBIANDO DATOS PERSONALES
                            </div>
                            <div class="panel-body">
                                <div class="row">

                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            @Html.Label("NOMBRE", htmlAttributes: new { @class = "tiT control-label col-md-6", @style = "color:darkblue" })
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "input", @disabled = "false", @style = "color:gold" } })
                                                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <hr />
                                        <br /> <br />
                                        <div class="form-group">
                                            @*@Html.Label("APELLIDO PATERNO", htmlAttributes: new { @class = "control-label col-md-6" })*@
                                            <div class="col-md-10">
                                                @*@Html.EditorFor(model => model.usuario, new { htmlAttributes = new { @class = "form-control", @disabled = "false" } })
                    @Html.ValidationMessageFor(model => model.usuario, "", new { @class = "text-danger" })*@
                                            </div>
                                        </div>
                                    </div>

                                    <!-- /.col-lg-6 (nested) -->
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            @Html.Label("APELLIDO PATERNO", htmlAttributes: new { @class = "tiT control-label col-md-6", @style = "color:darkblue" })
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.app, new { htmlAttributes = new { @class = "input form-control" } })
                                                @Html.ValidationMessageFor(model => model.app, "", new { @class = "text-danger", @style = "color:gold" })
                                            </div>
                                        </div>
                                        <hr />
                                        <br /> <br />
                                        <div class="form-group">
                                            @Html.Label("APELLIDO MATERNO", htmlAttributes: new { @class = "tiT control-label col-md-6", @style = "color:darkblue" })
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.apm, new { htmlAttributes = new { @class = "form-control", @style = "color:gold" } })
                                                @Html.ValidationMessageFor(model => model.apm, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            @Html.Label("DIRECIÓN", htmlAttributes: new { @class = "tiT control-label col-md-6", @style = "color:darkblue" })
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.direccion, new { htmlAttributes = new { @class = "form-control", @style = "color:gold" } })
                                                @Html.ValidationMessageFor(model => model.direccion, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <hr />
                                        <br /> <br />
                                        <div class="form-group">
                                            @Html.Label("TELÉFONO", htmlAttributes: new { @class = "tiT control-label col-md-6", @style = "color:darkblue" })
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.telefono, new { htmlAttributes = new { @class = "form-control", @style = "color:gold" } })
                                                @Html.ValidationMessageFor(model => model.telefono, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            @Html.Label(" SEXÓ", htmlAttributes: new { @class = "tiT control-label col-md-12 ", @style = "color:darkblue" })
                                            @Html.DropDownListFor(model => model.sexo, new SelectList(
                                             new List<Object>{
                                                                                new { value = "MASCULINO" , text = "MASCULINO" },
                                                                                new { value = "FEMENINO" , text = "FEMENINO" }
                                                          }, "value", "text", 2), "* ELIJA SU SEXÓ", htmlAttributes: new { @class = "input", @style = "color:gold", @required = "true" })
                                            @Html.ValidationMessageFor(model => model.sexo, "", new { @class = "text-danger" })
                                        </div>
                                        <hr />
                                        <br /> <br />
                                        <div class="form-group align-content-center">
                                            @Html.Label(" SECCIÓN", htmlAttributes: new { @class = "tiT control-label col-md-12 ", @style = "color:darkblue" })
                                            @Html.DropDownListFor(model => model.seccion, new SelectList(
                                                new List<Object>{
                                                        new { value = "PREESCOLAR" , text = "PRESCOLAR" },
                                                        new { value = "PRIMARIA" , text = "PRIMARIA" },
                                                        new { value = "SECUNDARIA" , text = "SECUNDARIA" }
                                                            }, "value", "text", 3), "* ELIJA SU SECCIÓN", htmlAttributes: new { @class = "input", @style = "color:gold", @required = "true" })
                                            @Html.ValidationMessageFor(model => model.seccion, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            @Html.Label(" GRADO", htmlAttributes: new { @class = "tiT control-label col-md-12 ", @style = "color:darkblue" })
                                            @Html.DropDownListFor(model => model.grado, new SelectList(
                                         new List<Object>{
                                                                                   new { value = "1°" , text = "1°" },
                                                                                   new { value = "2°" , text = "2°" },
                                                                                   new { value = "3°" , text = "3°" },
                                                                                   new { value = "4°" , text = "4°" },
                                                                                   new { value = "5°" , text = "5°" },
                                                                                   new { value = "6°" , text = "6°" }
                                                      }, "value", "text", 6), "* ELIJA SU GRADO", htmlAttributes: new { @class = "input", @style = "color:gold", @required = "true" })
                                            @Html.ValidationMessageFor(model => model.grado, "", new { @class = "text-danger" })
                                        </div>
                                        <hr />
                                        <br /> <br />
                                        <div class="form-group">
                                            @Html.Label(" GRUPO", htmlAttributes: new { @class = "tiT control-label col-md-12 ", @style = "color:darkblue" })
                                            @Html.DropDownListFor(model => model.grupo, new SelectList(
                                         new List<Object>{
                                                       new { value = "A" , text = "A" },
                                                       new { value = "B" , text = "B" },
                                                       new { value = "C" , text = "C" },
                                                        new { value = "D" , text = "D" }
                                                       }, "value", "text", 4), "* ELIJA SU GRUPO", htmlAttributes: new { @class = "input", @style = "color:gold", @required = "true" })
                                             @Html.ValidationMessageFor(model => model.grupo, "", new { @class = "text-danger" })
                                         </div>
                                    </div>
                                    <br />
                                    
                                </div>
                                <!-- /.row (nested) -->
                                <br /><br /><br>
                                            <div class="box-footer">
                                                <button type="submit" class="btn btn-success pull-right" style="width:120px; height:60px">ACTUALIZAR</button>
                                                <button type="button" class="btn btn-info" style="width:120px; height:60px" onclick="location.href='@Url.Action("Back to list", "HomeA")';return false;">REGREASAR</button>
                                             </div>
                            </div>
                            <!-- /.panel-body -->
                        </div>
                        <!-- /.panel -->
                    </div>
                    <!-- /.col-lg-12 -->
                </div>
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
        </div>
        <!-- /#page-wrapper -->
    </div>
    <!-- /#wrapper -->
    <!-- jQuery -->
    <script src="~/Content/startmin/js/jquery.min.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="~/Content/startmin/js/bootstrap.min.js"></script>

    <!-- Metis Menu Plugin JavaScript -->
    <script src="~/Content/startmin/js/metisMenu.min.js"></script>

    <!-- Custom Theme JavaScript -->
    <script src="~/Content/startmin/js/startmin.js"></script>

</body>
</html>